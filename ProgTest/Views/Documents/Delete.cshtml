@model ProgTest.Models.Document
@{
    ViewData["Title"] = "Delete";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .card {
            margin-top: 20px;
            padding: 20px;
        }

        .card-title {
            margin-bottom: 20px;
            font-size: 1.5em;
        }

        .card-body dt {
            font-weight: bold;
        }

        .card-body dd {
            margin-bottom: 15px;
        }

        .btn-spacing {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="display-4 text-center mb-4">Delete Document</h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Are you sure you want to delete this?</h2>
                        <dl class="row">
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FileName)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.FileName)</dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FilePath)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.FilePath)</dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FileSize)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.FileSize)</dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UploadedDate)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.UploadedDate)</dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Claim)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Claim.LecturerName)</dd>
                        </dl>
                        <form asp-action="Delete" class="mt-4">
                            <input type="hidden" asp-for="DocumentId" />
                            <div class="d-flex justify-content-between">
                                <input type="submit" value="Delete" class="btn btn-danger btn-spacing" />
                                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
