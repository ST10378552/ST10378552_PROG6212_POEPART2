@model ProgTest.Models.Document
@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .card {
            margin-top: 20px;
            padding: 20px;
        }
        .card-title {
            margin-bottom: 20px;
            font-size: 1.5em;
        }
        .form-group {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="display-4 text-center mb-4">Create Document</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Document Details</h2>
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="form-group">
                                <label>File Name</label>
                                <p class="form-control-static">@Model.FileName</p>
                                <span asp-validation-for="FileName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Upload Document</label>
                                <input type="file" name="File" class="form-control" required />
                                <span asp-validation-for="File" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ClaimId" class="control-label"></label>
                                <select asp-for="ClaimId" class="form-control" asp-items="ViewBag.ClaimId"></select>
                                <span asp-validation-for="ClaimId" class="text-danger"></span>
                            </div>
                            <div class="form-group d-flex justify-content-between mt-4">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
