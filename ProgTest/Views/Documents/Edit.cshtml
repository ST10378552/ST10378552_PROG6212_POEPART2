@model ProgTest.Models.Document
@{
    ViewData["Title"] = "Edit Document";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .card {
            margin-top: 20px;
            padding: 20px;
        }

        .card-title {
            margin-bottom: 20px;
            font-size: 1.5em;
        }

        .form-group {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="display-4 text-center mb-4">Edit Document</h1>
        <h4 class="text-center mb-4">Update the details below</h4>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Document Details</h2>
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <input type="hidden" asp-for="DocumentId" />
                            <div class="form-group">
                                <label asp-for="FileName" class="control-label"></label>
                                <input asp-for="FileName" class="form-control" placeholder="Enter File Name" />
                                <span asp-validation-for="FileName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FilePath" class="control-label"></label>
                                <input asp-for="FilePath" class="form-control" placeholder="Enter File Path" />
                                <span asp-validation-for="FilePath" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FileSize" class="control-label"></label>
                                <input asp-for="FileSize" class="form-control" placeholder="Enter File Size" />
                                <span asp-validation-for="FileSize" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UploadedDate" class="control-label"></label>
                                <input asp-for="UploadedDate" class="form-control" placeholder="Enter Uploaded Date" />
                                <span asp-validation-for="UploadedDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ClaimId" class="control-label"></label>
                                <select asp-for="ClaimId" class="form-control" asp-items="ViewBag.ClaimId"></select>
                                <span asp-validation-for="ClaimId" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center">
                                <input type="submit" value="Save Changes" class="btn btn-primary btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
