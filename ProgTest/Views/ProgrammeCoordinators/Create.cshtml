@model ProgTest.Models.ProgrammeCoordinator

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f0f4f8; /* Soft light background */
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            margin-top: 20px;
            border-radius: 15px; /* More rounded corners */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Subtle shadow */
            padding: 30px;
        }

        .card-title {
            font-size: 1.5em; /* Adjust title size */
            margin-bottom: 0;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            border-radius: 10px; /* Rounded corners for input fields */
        }

        .btn {
            transition: background-color 0.3s, transform 0.3s; /* Smooth button effects */
            padding: 10px 20px; /* Increased padding for better touch targets */
            font-size: 1.1em; /* Slightly larger text for buttons */
        }

            .btn:hover {
                transform: translateY(-2px); /* Lift effect on hover */
                background-color: #0056b3; /* Darker shade on hover for primary button */
            }

        .text-center {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="display-4 text-center mb-4">Create Programme Coordinator</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title">Coordinator Information</h4>
                        <hr />
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="form-group mb-3">
                                <label asp-for="FullName" class="control-label fw-bold"></label>
                                <input asp-for="FullName" class="form-control" placeholder="Enter Full Name" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Email" class="control-label fw-bold"></label>
                                <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="PhoneNumber" class="control-label fw-bold"></label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="text-center">
                                <input type="submit" value="Create" class="btn btn-success btn-lg" />
                                <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
