@model IEnumerable<ProgTest.Models.ClaimApprovalViewModel>
@{
    ViewData["Title"] = "Claim Tracker";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #282c34;
        }

        h2 {
            font-family: 'Arial', sans-serif;
            font-weight: bold;
        }

        .table th {
            text-align: center;
        }

        .table td {
            vertical-align: middle;
        }

        .table-bordered th, .table-bordered td {
            border: 1px solid #dee2e6;
        }

        .badge-approved {
            background-color: #28a745;
        }

        .badge-not-approved {
            background-color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center text-primary mb-4">Claim Tracker</h2>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Lecturer Name</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Total Amount</th>
                        <th>Claim Date</th>
                        <th>Is Submitted</th>
                        <th>Approver Role</th>
                        <th>Is Approved</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.LecturerName</td>
                            <td class="text-center">@item.HoursWorked</td>
                            <td class="text-center">@string.Format("{0:C}", item.HourlyRate)</td>
                            <td class="text-center">@string.Format("{0:C}", item.TotalAmount)</td>
                            <td class="text-center">@item.ClaimDate.ToString("yyyy/MM/dd")</td>
                            <td class="text-center">@((item.IsSubmitted) ? "Yes" : "No")</td>
                            <td>@item.ApproverRole</td>
                            <td class="text-center">
                                <span class="badge @(item.IsApproved ? "badge-approved" : "badge-not-approved")">
                                    @(item.IsApproved ? "Yes" : "No")
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>