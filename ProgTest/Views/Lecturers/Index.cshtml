@model IEnumerable<ProgTest.Models.Lecturer>
@{
    ViewData["Title"] = "Lecturer Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #282c34;
        }

        h1 {
            font-family: 'Arial Black', sans-serif;
            color: #4a90e2;
        }

        .btn-lg {
            font-size: 1.1em;
            padding: 12px 24px;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            transition: transform 0.3s ease-in-out;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-body {
            padding: 20px;
            text-align: left;
        }

        .card-title {
            font-size: 1.75em;
            color: #34495e;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .btn-spacing {
            margin-right: 10px;
        }

        .info-text {
            font-size: 1.1em;
            color: #7f8c8d;
        }

        .card-body p {
            margin-bottom: 12px;
        }

        .btn-group {
            display: flex;
            justify-content: flex-end;
            margin-top: 20px;
        }

        .create-btn {
            background-color: #28a745;
            color: white;
            border-radius: 50px;
            padding: 12px 25px;
        }

            .create-btn:hover {
                background-color: #218838;
            }

        .icon {
            margin-right: 8px;
        }

        .btn-warning {
            background-color: #f39c12;
            color: white;
        }

        .btn-info {
            background-color: #3498db;
            color: white;
        }

        .btn-danger {
            background-color: #e74c3c;
            color: white;
        }

        .create-section {
            text-align: right;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="display-4 text-center mb-5">Lecturer Index</h1>

        <div class="create-section">
            <a asp-action="Create" class="create-btn btn-lg">
                <i class="fas fa-plus-circle icon"></i> Create New Lecturer
            </a>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title">@Html.DisplayFor(modelItem => item.FullName)</h2>
                            <p class="info-text"><strong>Email:</strong> @Html.DisplayFor(modelItem => item.Email)</p>
                            <p class="info-text"><strong>Phone Number:</strong> @Html.DisplayFor(modelItem => item.PhoneNumber)</p>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.LecturerId" class="btn btn-warning btn-lg btn-spacing" title="Edit">
                                    <i class="fas fa-edit icon"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.LecturerId" class="btn btn-info btn-lg btn-spacing" title="View Details">
                                    <i class="fas fa-info-circle icon"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.LecturerId" class="btn btn-danger btn-lg" title="Delete" onclick="return confirm('Are you sure you want to delete this item?');">
                                    <i class="fas fa-trash-alt icon"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
