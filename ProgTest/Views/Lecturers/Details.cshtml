@model ProgTest.Models.Lecturer
@{
    ViewData["Title"] = "Details";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f0f4f8; /* Soft light background */
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            margin-top: 20px;
            border-radius: 15px; /* More rounded corners */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        }

        .card-header {
            background-color: #007bff; /* Primary color for header */
            color: white;
            padding: 20px;
            border-top-left-radius: 15px; /* Rounded top corners */
            border-top-right-radius: 15px; /* Rounded top corners */
        }

        .card-title {
            font-size: 1.5em; /* Adjust title size */
            margin-bottom: 0;
        }

        .card-body dt {
            font-weight: bold;
            color: #343a40; /* Darker text for emphasis */
            font-size: 1.1em; /* Increased font size */
        }

        .card-body dd {
            margin-bottom: 15px;
            color: #495057; /* Slightly lighter text for clarity */
            font-size: 1em; /* Adjusted font size */
        }

        .btn-spacing {
            margin-right: 10px;
        }

        .btn {
            transition: background-color 0.3s, transform 0.3s; /* Smooth button effects */
            padding: 10px 20px; /* Increased padding for better touch targets */
            font-size: 1.1em; /* Slightly larger text for buttons */
        }

            .btn:hover {
                transform: translateY(-2px); /* Lift effect on hover */
                background-color: #0056b3; /* Darker shade on hover for primary button */
            }

        .text-center {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center text-primary mb-4">Lecturer Details</h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h2 class="card-title">@Html.DisplayFor(model => model.FullName)</h2>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center">
            <a asp-action="Edit" asp-route-id="@Model?.LecturerId" class="btn btn-warning btn-lg btn-spacing">Edit</a>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
