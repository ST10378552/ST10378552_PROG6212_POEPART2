@model ProgTest.Models.Claim
@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .card {
            margin-top: 20px;
            padding: 20px;
        }

        .card-header {
            background-color: #007bff;
            color: white;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-primary, .btn-secondary {
            width: 100%;
        }

        .btn-lg {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="display-4 text-center mb-4">Create Claim</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">Claim Details</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="form-group">
                                <label asp-for="LecturerName" class="control-label"></label>
                                <input asp-for="LecturerName" class="form-control" placeholder="Enter Full Name" />
                                <span asp-validation-for="LecturerName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="HoursWorked" class="control-label"></label>
                                <input asp-for="HoursWorked" class="form-control" placeholder="Enter Hours Worked" />
                                <span asp-validation-for="HoursWorked" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="HourlyRate" class="control-label"></label>
                                <input asp-for="HourlyRate" class="form-control" placeholder="Enter Hourly Rate" />
                                <span asp-validation-for="HourlyRate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ClaimDate" class="control-label"></label>
                                <input asp-for="ClaimDate" class="form-control" placeholder="Enter Claim Date" />
                                <span asp-validation-for="ClaimDate" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <input class="form-check-input" asp-for="IsSubmitted" />
                                <label class="form-check-label" asp-for="IsSubmitted">
                                    @Html.DisplayNameFor(model => model.IsSubmitted)
                                </label>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
