@model IEnumerable<ProgTest.Models.Claim>
@{
    ViewData["Title"] = "Claim Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #282c34; /* Dark background for contrast */
        }

        h1 {
            font-family: 'Arial Black', sans-serif; /* Modern font for the heading */
            color: #4a90e2; /* Bright blue color for the heading */
        }

        .btn-lg {
            font-size: 1.1em;
            padding: 12px 24px;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            background-color: #fff; /* White background for cards */
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1); /* Shadow for depth */
            margin-bottom: 30px; /* Space between cards */
            transition: transform 0.3s ease-in-out; /* Animation on hover */
        }

            .card:hover {
                transform: translateY(-5px); /* Lift effect on hover */
            }

        .card-body {
            padding: 20px; /* Padding inside the card */
            text-align: left; /* Left align text */
        }

        .card-title {
            font-size: 1.75em; /* Font size for card title */
            color: #34495e; /* Darker blue color */
            font-weight: 700; /* Bold title */
            margin-bottom: 15px; /* Space below title */
        }

        .info-text {
            font-size: 1.1em; /* Font size for information text */
            color: #7f8c8d; /* Grey color for text */
        }

        .card-body p {
            margin-bottom: 12px; /* Space between paragraphs */
        }

        .btn-group {
            display: flex; /* Flexbox for button group */
            justify-content: flex-end; /* Align buttons to the right */
            margin-top: 20px; /* Space above buttons */
        }

        .create-btn {
            background-color: #28a745; /* Green for Create button */
            color: white; /* White text */
            border-radius: 50px; /* Rounded button */
            padding: 12px 25px; /* Padding for buttons */
        }

            .create-btn:hover {
                background-color: #218838; /* Darker green on hover */
            }

        .btn-warning {
            background-color: #f39c12; /* Yellow for Edit button */
            color: white; /* White text */
        }

        .btn-info {
            background-color: #3498db; /* Blue for Details button */
            color: white; /* White text */
        }

        .btn-danger {
            background-color: #e74c3c; /* Red for Delete button */
            color: white; /* White text */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="display-4 text-center mb-5">Claims</h1>

        <div class="create-section text-right mb-4">
            <a asp-action="Create" class="create-btn btn-lg">
                <i class="fas fa-plus-circle icon"></i> Add New Claim
            </a>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title">Claim ID: @item.ClaimId</h2>
                            <p class="info-text"><strong>Lecturer:</strong> @Html.DisplayFor(modelItem => item.LecturerName)</p>
                            <p class="info-text"><strong>Hours:</strong> @Html.DisplayFor(modelItem => item.HoursWorked)</p>
                            <p class="info-text"><strong>Rate:</strong> @string.Format("{0:C}", item.HourlyRate)</p>
                            <p class="info-text"><strong>Total:</strong> @string.Format("{0:C}", item.TotalAmount)</p>
                            <p class="info-text"><strong>Date:</strong> @item.ClaimDate.ToString("yyyy/MM/dd")</p>
                            <p class="info-text"><strong>Submitted:</strong> @((item.IsSubmitted) ? "Yes" : "No")</p>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.ClaimId" class="btn btn-warning btn-lg btn-spacing" title="Edit">
                                    <i class="fas fa-edit icon"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ClaimId" class="btn btn-info btn-lg btn-spacing" title="View Details">
                                    <i class="fas fa-info-circle icon"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ClaimId" class="btn btn-danger btn-lg" title="Delete" onclick="return confirm('Are you sure you want to delete this item?');">
                                    <i class="fas fa-trash-alt icon"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
